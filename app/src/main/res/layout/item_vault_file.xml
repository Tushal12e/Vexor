<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/surface_elevated"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thumbnail Container with 1:1 aspect ratio -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardIcon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/surface_elevated"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_file"
                app:tint="@color/primary_variant" />

        </androidx.cardview.widget.CardView>

        <!-- Video duration badge (only visible for videos) -->
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_duration_badge"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:text="0:00"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/cardIcon"
            app:layout_constraintEnd_toEndOf="@id/cardIcon"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp" />

        <!-- File type indicator (small icon overlay) -->
        <ImageView
            android:id="@+id/ivFileType"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_image"
            android:visibility="gone"
            android:background="@drawable/bg_duration_badge"
            android:padding="3dp"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="@id/cardIcon"
            app:layout_constraintBottom_toBottomOf="@id/cardIcon"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp" />

        <!-- File name -->
        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:text="Filename.jpg"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardIcon" />

        <!-- File size -->
        <TextView
            android:id="@+id/tvFileSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="10dp"
            android:text="2.4 MB"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFileName"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Selection checkmark overlay -->
        <View
            android:id="@+id/selectionOverlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#60000000"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/ivSelected"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:tint="@color/secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
